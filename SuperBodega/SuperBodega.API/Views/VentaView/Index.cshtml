@{
    ViewData["Title"] = "Ventas";
    Layout = "_DashboardLayout";
}

@section SidebarMenu {
    <partial name="_SidebarMenuPartial" />
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0">Gestión de Ventas</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold">Listado de Ventas</h6>
            <div class="form-check mt-3 mb-2">
                <input class="form-check-input" type="checkbox" id="notificacionSincronica">
                <label class="form-check-label" for="notificacionSincronica">
                    Enviar notificación inmediata por correo
                </label>
                <small class="form-text text-muted d-block">
                    Si está habilitado, el cliente recibirá un email inmediatamente. De lo contrario, se procesará en segundo plano.
                </small>
            </div>
            <div class="d-flex align-items-center">
                <select id="ventas-estadoFilter" class="form-select me-2">
                    <option value=""> Todos los estados </option>
                </select>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="ventasTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#Factura</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="ventas-tbody">
                        <!-- Aquí se cargarán las ventas dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ventas.js"></script>
}