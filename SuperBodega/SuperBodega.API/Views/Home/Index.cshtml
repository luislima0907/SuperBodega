@{
    Layout = null;
    ViewData["Title"] = "SuperBodega - Página Principal";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>
    <div class="container-fluid main-container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-shop me-2"></i>SuperBodega
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Dashboard/ClienteDashboard">
                                <i class="bi bi-cart me-1"></i>Área Cliente
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Dashboard/AdminDashboard">
                                <i class="bi bi-gear me-1"></i>Administración
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <!-- Añadir el banner de estado de conexión -->
            <div class="alert @(ViewBag.DbConnectionSuccess ? "alert-success" : "alert-danger") connection-status" role="alert">
                <h5><i class="bi @(ViewBag.DbConnectionSuccess ? "bi-database-check" : "bi-database-x") me-2"></i>Estado de la base de datos:</h5>
                <p class="mb-0">@ViewBag.DbConnectionMessage</p>
            </div>

            <div class="hero-section" id="welcomeSection">
                <div class="container">
                    <h1 class="display-4">Bienvenido a SuperBodega</h1>
                    <p class="lead">Tu tienda virtual de confianza para todos tus productos.</p>
                    <hr class="my-4">
                    <p>Explora nuestro catálogo completo y realiza tus compras.</p>
                    <div class="mt-4">
                        <a href="/Dashboard/ClienteDashboard" class="btn btn-light btn-lg me-2">
                            <i class="bi bi-box-seam me-1"></i>Ver Productos
                        </a>
                        <a href="/Dashboard/AdminDashboard" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-gear me-1"></i>Administración
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            <div class="container">
                <p><i class="bi bi-shop me-2"></i>&copy; @DateTime.Now.Year - SuperBodega</p>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/home.js"></script>
</body>
</html>