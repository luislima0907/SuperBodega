                                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Producto">
                                <div class="card-body">
                                    <h5 class="card-title">TV Samsung 55"</h5>
                                    <p class="card-text text-muted">Samsung</p>
                                    <p class="card-text fw-bold">$749.99</p>
                                    <div class="d-grid gap-2">
                                        <a href="#" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-cart-plus me-1"></i>Añadir al carrito
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .notification-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 10px;
    }
    
    .notification-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }
    
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }
    
    .product-card img {
        padding: 10px;
        object-fit: contain;
        height: 150px;
    }
</style>