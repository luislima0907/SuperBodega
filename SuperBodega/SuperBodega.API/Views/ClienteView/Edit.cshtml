@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "_DashboardLayout";
}

@section SidebarMenu {
    <partial name="_SidebarMenuPartial" />
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0">Edición de Clientes</h1>
        <a href="/Clientes/Index" id="btnVolver" class="btn btn-outline-primary me-2">
            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
        </a>
    </div>

    <div id="alertContainer" class="mb-4" style="display: none;"></div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold">Editar Cliente</h6>
                </div>
                <div class="card-body">
                    <form id="formEditCliente">
                        <input type="hidden" id="idCliente" name="idCliente">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del cliente">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="apellido" class="form-label">Apellido</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellido del cliente">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input type="email" class="form-control" id="email" name="email" placeholder="ejemplo@correo.com">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input type="tel" class="form-control" id="telefono" name="telefono" placeholder="Ej: 5555-5555">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">Dirección</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                <textarea class="form-control" id="direccion" name="direccion" rows="2" placeholder="Dirección completa del cliente"></textarea>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="estado" class="form-label">Estado</label>
                            <div class="form-check form-switch">
                                <input type="checkbox" class="form-check-input" id="estado" name="estado" checked>
                                <label class="form-check-label" for="estado">Activo</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="fechaDeRegistro" class="form-label">Fecha de Registro</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                                <input type="hidden" id="fechaDeRegistro" name="fechaDeRegistro">
                                <input type="text" class="form-control" id="fechaDeRegistroVisible" readonly>
                            </div>
                            <small class="text-muted">La fecha de registro no se puede modificar.</small>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "ClienteView")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-ban me-1"></i>Cancelar
                            </a>
                            <button type="button" id="btnRestaurarCliente" class="btn btn-warning me-2">
                                <i class="fas fa-rotate-left me-1"></i>Restaurar
                            </button>                            
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sync-alt me-1"></i>Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold">Información Adicional</h6>
                </div>
                <div class="card-body">
                    <p>Al actualizar un cliente, se reflejarán los cambios en todos las ventas asociadas.</p>
                    <hr>
                    <h6 class="font-weight-bold">Consideraciones:</h6>
                    <ul>
                        <li>Desactivar un cliente ocultará todos sus ventas en las búsquedas.</li>
                        <li>No se recomienda cambiar su información si ya tiene ventas asociadas.</li>
                        <li>La fecha de registro no puede ser modificada.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/clientes.js"></script>
}