@{
    ViewData["Title"] = "Ventas por Periodo";
    Layout = "_DashboardLayout";
}

@section SidebarMenu {
    <partial name="_SidebarMenuPartial" />
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0">Reporte de Ventas por Periodo</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold">Seleccione el rango de fechas</h6>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-5">
                    <label for="fechaInicio" class="form-label">Fecha de inicio</label>
                    <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" required>
                </div>
                <div class="col-md-5">
                    <label for="fechaFin" class="form-label">Fecha de fin</label>
                    <input type="date" class="form-control" id="fechaFin" name="fechaFin" required>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button id="btnBuscarPorPeriodo" class="btn btn-primary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-12 d-flex gap-2">
                    <button id="btnExportarPorPeriodo" class="btn btn-success" disabled>
                        <i class="bi bi-file-excel"></i> Exportar a Excel
                    </button>
                    <button id="btnExportarPorPeriodoPDF" class="btn btn-danger" disabled>
                        <i class="bi bi-file-pdf"></i> Exportar a PDF
                    </button>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="ventasTable">
                    <thead class="table-light">
                        <tr>
                            <th>#Factura</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="ventasTableBody">
                        <!-- Aquí se cargarán las ventas dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/reportes.js"></script>
}